{% extends "mentor_nav.twig" %}

{% block title %}Add a new Quest{% endblock %}

{% block head %}
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock %}

{% block quests_button %}class="active"{% endblock %}

{% block aside %}
    <a href="/quests_manager">
        <button><i class="material-icons bigger">arrow_back</i></button>
    </a>

{% endblock %}

{% block main %}
    <form method="post">
        <div class="flexbox">
            <label>Quest name:</label>
            <input name="questName" type="text" class="stdinput width80" placeholder="Enter a quest name..." required>
        </div>
        <div class="flexbox">
            <label>Description:</label>
            <input name="description" type="text"  maxlength="600" class="stdinput width80" placeholder="Enter a description..." required>
        </div>
        <div class="flexbox">
            <label>Value:</label>
            <input name="value" type="number" class="stdinput width80" placeholder="Enter a quest reward..." required>
        </div>
        <div class="flexbox">
            <label>Type of quest:</label>
            <select name="questType" type = "text" class="stdinput width80">
                <option value="FALSE">Regular</option>
                <option value="TRUE">Extra</option>
            </select>
        </div>
        <button type="submit" class="bluebutton floatright">SAVE</button>
    </form>
{% endblock %}