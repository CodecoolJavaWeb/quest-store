{% extends "admin_nav.twig" %}

{% block title %}Mentor editor{% endblock %}

{% block mentors_button %}class="active"{% endblock %}

{% block aside %}
    <a href="add_new_mentor.html">
        <button>x</button>
        {# <button>âœ•</button> #}
    </a>
{% endblock %}

{% block main %}
    <div class="flexbox">
        <label style="flex-grow: 1">First name:</label>
        <input type="text" class="stdinput width80" value="Mariusz" disabled>
        <button class="redbutton" onclick="enableEdit(this)">EDIT</button>
        <button type = "submit" class="bluebutton" onclick="save(this)" style="display: none;">SAVE</button>
    </div>
    <div class="flexbox">
        <label style="flex-grow: 1">Last name:</label>
        <input type="text" class="stdinput width80" value="Chudy" disabled>
        <button class="redbutton" onclick="enableEdit(this)">EDIT</button>
        <button type= "submit" class="bluebutton" onclick="save(this)" style="display: none;">SAVE</button>
    </div>
    <div class="flexbox">
        <label style="flex-grow: 1">Email:</label>
        <input type="email" class="stdinput width80" value="m.chudy@codecool.com" disabled>
        <button class="redbutton" onclick="enableEdit(this)">EDIT</button>
        <button type="submit" class="bluebutton" onclick="save(this)" style="display: none;">SAVE</button>
    </div>
    <div class="flexbox">
        <label style="flex-grow: 1">Class:</label>
        <select class="stdinput width80" disabled>
            <option>Java</option>
            <option>Web and SQL</option>
        </select>
        <button class="redbutton" onclick="enableEdit(this)">EDIT</button>
        <button type="submit" class="bluebutton" onclick="save(this)" style="display: none;">SAVE</button>
    </div>
    <label>Students in class:</label>
    <div class="list">
        <ol class="height300">
            {% for codecooler in codecoolers %}
            <li> {{ codecooler.toString() }} </li>
            {% endfor %}
        </ol>
    </div>
{% endblock %}

{% block script %}
    <script src="js/mentor_editor.js"></script>
{% endblock %}