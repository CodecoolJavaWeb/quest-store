{% extends "codecooler_nav.twig" %}

{% block title %}Quest detail{% endblock %}

{% block head %}
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock %}

{% block quests_button %}class="active"{% endblock %}

{% block aside %}
    <a href="/codecooler_quests">
        <button><i class="material-icons bigger">arrow_back</i></button>
    </a>
{% endblock %}

{% block main_class %}class="cardscontainer flexcolumn"{% endblock %}

{% block main %}
    <div class="card">
        <img src="{{ quest.getImagePath() }}" class="cardimage">
        <h3>{{ quest.getName() }} - {{ quest.getValue() }} CC</h3>
        <p>{{ quest.getDescription() }}</p>
    </div>
    <div>
    {% if quest.isExtra() %}
        This quest is extra.
    {% endif %}
    You have done this quest {{ questCount }} times</div>
{% endblock %}